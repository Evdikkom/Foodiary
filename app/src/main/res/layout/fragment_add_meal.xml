<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ЕДИНСТВЕННЫЙ прямой child ScrollView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавление приёма пищи"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editSearchFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Поиск продукта (например: яблоко)"
            android:layout_marginTop="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerFoods"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textSelectedFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Не выбран продукт"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/editQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Количество (граммы)"
            android:inputType="numberDecimal"
            android:layout_marginTop="12dp" />

        <Spinner
            android:id="@+id/spinnerMealType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/editNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Заметка (необязательно)"
            android:layout_marginTop="12dp" />

        <!-- Блок импорта (внутри общего LinearLayout) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Импорт продукта по штрихкоду (OpenFoodFacts)"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <EditText
                android:id="@+id/editBarcode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Штрихкод (например 5901234123457)"
                android:inputType="number" />

            <Button
                android:id="@+id/buttonImport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Импорт"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonSearchRemote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Искать в OpenFoodFacts"
            android:layout_marginTop="8dp" />

        <ProgressBar
            android:id="@+id/progressRemoteSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="6dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerRemoteFoods"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginTop="8dp" />

        <ProgressBar
            android:id="@+id/progressImport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/textError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сохранить приём пищи"
            android:layout_marginTop="12dp" />

        <ProgressBar
            android:id="@+id/progressSaving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="12dp" />

    </LinearLayout>

</ScrollView>
